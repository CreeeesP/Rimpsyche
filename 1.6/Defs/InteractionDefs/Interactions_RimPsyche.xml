<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Random social interactions -->
  <InteractionDef>
    <defName>Rimpsyche_StartConversation</defName>
    <label>start conversation</label>
    <workerClass>Maux36.RimPsyche.InteractionWorker_StartConversation</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Conversation</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry(p=4)->[INITIATOR_nameDef] [conversed] with [RECIPIENT_nameDef].</li>
        <li>r_logentry->[INITIATOR_nameDef] hailed [RECIPIENT_nameDef] for a conversation.</li>
		
        <li>conversed(p=4)->struck up a conversation</li>
        <li>conversed->started talking</li>
        <li>conversed->brought up a topic</li>
        <li>conversed->started discussing something</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>

  <RulePackDef>
    <defName>Sentence_RimpsycheConversationFail</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[RECIPIENT_nameDef] ignored [INITIATOR_objective].</li>
        <li>sent->[RECIPIENT_nameDef] did not respond.</li>
        <li>sent->[RECIPIENT_nameDef] brushed [INITIATOR_objective] off.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <!-- Never actually used besides for the mote. Maybe remove it? -->
  <InteractionDef>
    <defName>Rimpsyche_Conversation</defName>
    <label>continue conversation</label>
    <workerClass>Maux36.RimPsyche.InteractionWorker_Conversation</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Conversation</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] [conversed] with [RECIPIENT_nameDef].</li>
        <li>conversed(p=4)->continued the talk</li>
        <li>conversed->carried on the conversation</li>
        <li>conversed->delved deeper into the topic</li>
        <li>conversed->kept chatting</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>

  <InteractionDef>
    <defName>Rimpsyche_EndConversation</defName>
    <label>ended conversation</label>
    <workerClass>InteractionWorker_DeepTalk</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Chitchat</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] and [RECIPIENT_nameDef] about {0}.</li>
        <li>r_logentry->[INITIATOR_nameDef] had a conversation about {0} with [RECIPIENT_nameDef].</li>
        <li>r_logentry->[INITIATOR_nameDef] discussed {0} with [RECIPIENT_nameDef].</li>
        <li>r_logentry->[INITIATOR_nameDef] and [RECIPIENT_nameDef] exchanged thoughts on {0}.</li>
        <li>r_logentry->[INITIATOR_nameDef] and [RECIPIENT_nameDef] had a talk about {0}.</li>
        <li>r_logentry->[INITIATOR_nameDef] and [RECIPIENT_nameDef] shared views on {0}.</li>
        <li>r_logentry->[INITIATOR_nameDef] spoke to [RECIPIENT_nameDef] about {0}.</li>
        <li>r_logentry->[INITIATOR_nameDef] and [RECIPIENT_nameDef] had a chat about {0}.</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>

  <RulePackDef>
    <defName>Sentence_RimpsycheSocialFightConvoInitiatorStarted</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->Their differences escalated until [INITIATOR_nameDef] started a fight!</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>Sentence_RimpsycheSocialFightConvoRecipientStarted</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->Their differences escalated until [RECIPIENT_nameDef] started a fight!</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
</Defs>