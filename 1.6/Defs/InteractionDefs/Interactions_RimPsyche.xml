<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Random social interactions -->
  <InteractionDef>
    <defName>Rimpsyche_Conversation</defName>
    <label>ended conversation</label>
    <workerClass>Maux36.RimPsyche.InteractionWorker_StartConversation</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Conversation</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->They spoke for a while.</li>
        <li>r_logentry->They took a moment to talk.</li>
        <li>r_logentry->They chatted for some time.</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>

  <RulePackDef>
    <defName>Sentence_RimpsycheConversationPositiveGood</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->They found common ground and enjoyed a pleasant chat.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_RimpsycheConversationPositiveBad</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->They saw eye-to-eye, but the chat still felt oddly uncomfortable.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_RimpsycheConversationNegativeGood</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->Despite differing views, they had a respectful conversation.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_RimpsycheConversationNegativeBad</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->Their clashing opinions sparked a tense exchange.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Sentence_RimpsycheConversationFail</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->[RECIPIENT_nameDef] ignored [INITIATOR_objective].</li>
        <li>sent->[RECIPIENT_nameDef] did not respond.</li>
        <li>sent->[RECIPIENT_nameDef] brushed [INITIATOR_objective] off.</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <InteractionDef>
    <defName>Rimpsyche_ReportConversation</defName>
    <label>started conversation</label>
    <workerClass>InteractionWorker_DeepTalk</workerClass>
    <symbol>Things/Mote/SpeechSymbols/Hail</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry(p=4)->[INITIATOR_nameDef] started talking about {0} with [RECIPIENT_nameDef].</li>
        <li>r_logentry->[INITIATOR_nameDef] hailed [RECIPIENT_nameDef] for a conversation about {0}.</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>

  <RulePackDef>
    <defName>Sentence_RimpsycheSocialFightConvoInitiatorStarted</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->Their differences escalated until [INITIATOR_nameDef] started a fight!</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
  
  <RulePackDef>
    <defName>Sentence_RimpsycheSocialFightConvoRecipientStarted</defName>
    <rulePack>
      <rulesStrings>
        <li>sent->Their differences escalated until [RECIPIENT_nameDef] started a fight!</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
</Defs>