  <ThoughtDef>
    <defName>Rimpsyche_ConversationOpinion</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>5</durationDays>
    <stackLimit>300</stackLimit>
    <stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
    <stackedEffectMultiplier>0.9</stackedEffectMultiplier>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <socialTargetDevelopmentalStageFilter>Baby, Child, Adult</socialTargetDevelopmentalStageFilter>
    <stages>
      <li>
        <label>awful</label>
        <description>awful1.</description>
        <baseOpinionOffset>-7</baseOpinionOffset>
      </li>
      <li>
        <label>dull</label>
        <description>dull1.</description>
        <baseOpinionOffset>-5</baseOpinionOffset>
      </li>
      <li>
        <label>mediocre</label>
        <description>mediocre1.</description>
        <baseOpinionOffset>-4</baseOpinionOffset>
      </li>
      <li>
        <label>decent</label>
        <description>decent1.</description>
        <baseOpinionOffset>-3</baseOpinionOffset>
      </li>
      <li>
        <label>slightly impressive</label>
        <description>slightly impressive1.</description>
        <baseOpinionOffset>-2</baseOpinionOffset>
      </li>
      <li>
        <label>impressive</label>
        <description>impressive1.</description>
        <baseOpinionOffset>-1</baseOpinionOffset>
      </li>
      <li>
        <label>very impressive</label>
        <description>very impressive1.</description>
        <baseOpinionOffset>1</baseOpinionOffset>
      </li>
      <li>
        <label>extremely impressive</label>
        <description>extremely impressive1.</description>
        <baseOpinionOffset>2</baseOpinionOffset>
      </li>
      <li>
        <label>unbelievably impressive</label>
        <description>unbelievably impressive1.</description>
        <baseOpinionOffset>3</baseOpinionOffset>
      </li>
      <li>
        <label>wondrously impressive</label>
        <description>wondrously impressive1.</description>
        <baseOpinionOffset>4</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

